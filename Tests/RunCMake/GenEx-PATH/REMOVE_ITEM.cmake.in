######################################
## tests with list of paths
######################################
function (compute_reference action)
  unset(reference)
  foreach (path IN LISTS paths)
    cmake_path(${action} path ${ARGN})
    list(APPEND reference "${path}")
  endforeach()

  return(PROPAGATE reference)
endfunction()

set (paths "a/b/c.e.f" "g/h/i.j.k")
